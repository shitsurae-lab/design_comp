doctype html
//- 変数を使ってtitle カスタマイズ
block locals
  - var title = "Build by webpack and Pug, Variable";

html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
  body
    include _menu.pug
    block content
